{
  "version": "1",
  "default_action": "allow",
  "rules": [
    {
      "id": "rule-01",
      "description": "Sensitive Data Block",
      "match": {
        "type": "regex",
        "patterns": ["(?i)password", "(?i)secret_key"]
      },
      "action": "block",
      "severity": "high"
    },
    {
      "id": "rule-02",
      "description": "Email Redaction",
      "match": {
        "type": "regex",
        "patterns": ["[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}"]
      },
      "action": "redact",
      "redaction_token": "[EMAIL_REDACTED]",
      "severity": "medium"
    }
  ]
}
